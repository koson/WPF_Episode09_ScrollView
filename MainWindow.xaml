<Window x:Class="WPF_Episode09_ScrollView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Episode09_ScrollView"
        mc:Ignorable="d"
        Title="WPF Episode 09: ScrollViewer Demo" Height="600" Width="900">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Panel -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="10">
            <StackPanel>
                <TextBlock Text="ScrollViewer Demos" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="White" Margin="0,0,0,20"/>
                
                <Button Content="1. Vertical Scroll" Click="ShowVerticalScroll" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="2. Horizontal Scroll" Click="ShowHorizontalScroll" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="3. Both Directions" Click="ShowBothDirections" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="4. Long Form" Click="ShowLongForm" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="5. Article" Click="ShowArticle" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="6. Image Gallery" Click="ShowImageGallery" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="7. Settings Panel" Click="ShowSettings" 
                        Margin="0,5" Padding="10,5"/>
                <Button Content="8. Visibility Modes" Click="ShowVisibilityModes" 
                        Margin="0,5" Padding="10,5"/>
            </StackPanel>
        </Border>
        
        <!-- Content Panel -->
        <Border Grid.Column="1" x:Name="ContentPanel" Background="White">
            <!-- Dynamic content loaded here -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <StackPanel>
                    <TextBlock Text="Welcome to ScrollViewer Demo" 
                               FontSize="28" FontWeight="Bold" 
                               Margin="0,0,0,20"/>
                    
                    <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0,10">
                        ScrollViewer is a container control that provides scrollbars 
                        when content exceeds the available space. It's essential for 
                        displaying long content like articles, forms, and lists.
                    </TextBlock>
                    
                    <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0,10">
                        Click any button on the left to see different ScrollViewer demos!
                    </TextBlock>
                    
                    <Border Background="LightBlue" Padding="15" Margin="0,20" 
                            CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Key Features:" FontWeight="Bold" 
                                       FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="• Automatic scrollbars when needed" Margin="0,5"/>
                            <TextBlock Text="• Mouse wheel support" Margin="0,5"/>
                            <TextBlock Text="• Touch screen support" Margin="0,5"/>
                            <TextBlock Text="• Vertical and horizontal scrolling" Margin="0,5"/>
                            <TextBlock Text="• Customizable scrollbar visibility" Margin="0,5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>